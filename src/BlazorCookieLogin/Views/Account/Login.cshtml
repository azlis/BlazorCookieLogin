@page
@{
    Layout = "~/Shared/_Layout.cshtml";
    if (ViewBag.State is not null)
    {
        <script>alert('登录失败');</script>
    }
}

<div class="container">
    <main role="main" class="pb-1">
        <div class="d-flex justify-content-center align-items-center">
            <section>
                <form id="account" method="post">
                    <h2>使用账号和密码登录</h2>
                    <hr />
                    <div class="input-group mb-3">
                        <label class="input-group-text">账号</label>
                        <input class="form-control" type="text" name="userName" />
                    </div>
                    <div class="input-group mb-3">
                        <label class="input-group-text">密码</label>
                        <input class="form-control" type="password" name="password" />
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-outline-primary">登录</button>
                    </div>
                </form>
            </section>
        </div>
    </main>
</div>